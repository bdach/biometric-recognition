<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="io.github.bdach.biometrics.presentation.controllers.IrisRecognitionResultController"
            prefHeight="400.0" prefWidth="600.0">
    <left>
        <VBox spacing="10">
            <padding>
                <Insets topRightBottomLeft="10" />
            </padding>
            <Label text="Original" />
            <ImageView fx:id="originalImageView"
                       fitWidth="250"
                       preserveRatio="true" />
        </VBox>
    </left>
    <center>
        <VBox spacing="10"
              alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="10" />
            </padding>
            <Label text="Results" />
            <ListView fx:id="comparisonResultListView" minWidth="250" />
        </VBox>
    </center>
    <right>
        <VBox spacing="10"
              alignment="TOP_RIGHT">
            <padding>
                <Insets topRightBottomLeft="10" />
            </padding>
            <Label text="Comparison" />
            <ImageView fx:id="comparedImageView"
                       fitWidth="250"
                       preserveRatio="true" />
        </VBox>
    </right>
</BorderPane>
