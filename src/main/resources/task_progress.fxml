<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.github.bdach.biometrics.presentation.controllers.TaskProgressController"
      prefHeight="80.0" prefWidth="600.0"
      spacing="10" alignment="CENTER_LEFT">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <Label fx:id="statusLabel" text="Operation in progress..." />
    <ProgressBar fx:id="progressBar" progress="0" prefWidth="Infinity" />
</VBox>
